    <ComponentGroup Id="Register_DotNetDriver">
      <ComponentRef Id="Register_GAC"/>
      <ComponentRef Id="Register_DotNetProvider_20"/>
      <ComponentRef Id="Register_DotNetProvider_40"/>
      <ComponentRef Id="Register_DotNet64Provider_20"/>
