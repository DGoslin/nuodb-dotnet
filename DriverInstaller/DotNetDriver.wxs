            <Directory Id="EXTENSION_DIR_VS2010_MICROSOFT_EFT_TEMPLATES" Name="Templates">
              <Directory Id="EXTENSION_DIR_VS2010_MICROSOFT_EFT_TEMPLATES_INCLUDES" Name="Includes"/>
            </Directory>
          </Directory>
        </Directory>
      </Directory>

      <Directory Id="EXTENSION_DIR_VS2012" Name="VS2012">
